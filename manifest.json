{
    "manifest_version": 3,
    "name": "Help BBF - Envio WhatsApp",
    "version": "1.0",
    "description": "Envie mensagens em massa pelo WhatsApp Web para seus clientes.",
    "permissions": ["scripting", "tabs", "storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
      "https://web.whatsapp.com/*"
    ]
  }
  